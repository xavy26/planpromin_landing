---
import ServiceModal from "./ServiceModal.astro";

interface Props {
  title: string;
  description: string;
  image: string;  
}

const {title, description, image } = Astro.props;
---
<div class="bg-white rounded-2xl shadow-lg cursor-pointer">
  <div class="p-5 z-50">
    <h3 class="font-bold text-lg line-clamp-1">
      { title }
    </h3>
    <p class="text-gray-700 line-clamp-2">
      { description }
    </p>
  </div>
  <img
    src=`${image}`
    class="w-full h-96 -z-0 object-cover rounded-lg sticky"
  />
</div>

<style>
  img {
    aspect-ratio: 4 / 3;
  }
</style>

