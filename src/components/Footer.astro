---
import siteData from "../data/site.json";

const pn = Astro.url.pathname;
const isHome = pn === "/";
const site = Astro.site;
const abtLink = isHome ? "#about" : `${site}#about`;
const ftLink = isHome ? "#features" : `${site}#features`;
---

<footer
  class="w-full flex flex-col sm:flex-row sm:justify-center text-lg tracking-wide px-4 sm:px-0 py-16"
>
  <div class="text-center pr-0 sm:pr-8 py-4">
    <ul class="list-none">
      {
        siteData.social.map((scm) => (
          <li>
            <a
              class="text-gray-800 hover:text-green-400 no-underline"
              href={scm.url}
              target="_blank"
              rel="_noopener"
            >
              {scm.title}
            </a>
          </li>
        ))
      }
    </ul>
  </div>
  <div class="h-px sm:h-auto w-1/2 sm:w-px bg-purple-600 mx-auto sm:mx-0"></div>
  <div class="text-center px-8 py-4">
    <ul class="list-none">
      <li>
        <a
          class="text-gray-800 hover:text-purple-600 no-underline"
          href={abtLink}>About</a
        >
      </li>
      <li>
        <a
          class="text-gray-800 hover:text-purple-600 no-underline"
          href={ftLink}>Features</a
        >
      </li>
    </ul>
  </div>
  <div class="h-px sm:h-auto w-1/2 sm:w-px bg-purple-600 mx-auto sm:mx-0"></div>
  <div class="text-center pl-0 sm:pl-8 py-4">
    <ul class="list-none">
      <li>
        <a
          class="text-gray-800 hover:text-purple-600 no-underline"
          href={`${site}privacy`}>Privacy</a
        >
      </li>
      <li>
        <a
          class="text-gray-800 hover:text-purple-600 no-underline"
          href={`${site}imprint`}>Imprint</a
        >
      </li>
    </ul>
  </div>
</footer>
<div class="w-full">
  <span class="block text-center text-gray-800 text-sm font-light">
    &copy; {siteData.author}
  </span>
</div>
<div class="">
  <a
    id="btt"
    class="hidden fixed bottom-0 rounded-full right-0 mx-4 my-4 text-gray-200 border border-gray-500 hover:bg-gray-200 hover:text-gray-500 hover:border-browngray no-underline px-4 py-1 bg-gray-500 shadow-md"
    href="#top"
    title="Back to Top"
  >
    <svg
      class="w-6 h-6"
      aria-hidden="true"
      xmlns="http://www.w3.org/2000/svg"
      fill="none"
      viewBox="0 0 14 8"
    >
      <path
        stroke="currentColor"
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        d="M13 7 7.674 1.3a.91.91 0 0 0-1.348 0L1 7"></path>
    </svg>
  </a>
</div>
<!-- "Follow" Tooltip template -->
<template id="followTip">
  {
    siteData.social.map((scm) => (
      <a
        href={scm.url}
        class="inline-block text-gray-200 text-sm bg-gray-500 shadow-md hover:bg-gray-100 hover:text-gray-800 no-underline p-1 px-4 mx-2 my-1"
        target="_blank"
        rel="noopener"
      >
        {scm.title}
      </a>
    ))
  }
</template>
