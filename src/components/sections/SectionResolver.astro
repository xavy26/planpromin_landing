---
import type { CollectionEntry } from 'astro:content'
import Services from './Services.astro'
import About from './About.astro'
import Register from './Register.astro'
import Map from './Map.astro'

interface Props {
  afterTitle: string,
  sect: CollectionEntry<'sections'>,
  title: string,
  type: string
}

const { afterTitle, sect, title, type } = Astro.props
const { Content } = await sect.render()
---

{type === 'services' && <Services title={title}>
  <Content />
</Services>}

{type === 'about' && <About afterTitle={afterTitle} title={title}>
  <Content />
</About>}

{type === 'map' && <Map title={title}>
  <Content />
</Map>}

{type === 'register' && <Register title={title}>
  <Content />
</Register>}