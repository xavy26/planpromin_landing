---
import HeaderCard from '../HeaderCard.astro'
import Navbar from '../Navbar.astro'
---
<header class="header md:w-full h-full md:h-auto min-h-screen flex flex-col justify-between bg-white">
  <Navbar />
  <HeaderCard />
  
  <video autoplay loop muted src="videos/header_video.mp4"></video>
  
</header>

<style>
  video {
    top: 0px;
    left: 0px;
    width: 100vw;
    height: 100vh;
    object-fit: cover;
    position: absolute;
    opacity: 0.95;
  }
</style>