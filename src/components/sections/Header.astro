---
import HeaderCard from '../HeaderCard.astro'
import Navbar from '../Navbar.astro'
---
<header class="header md:w-full h-full md:h-auto min-h-screen flex flex-col justify-between bg-white">
  <Navbar />
  <HeaderCard />
  
  <video class="object-cover -z-0 h-full" preload="true" autoplay loop src="videos/header_video.mp4"></video>
  
</header>

<style>
  video {
    top: 50%;
    left: 50%;
    height: max-content;
  }
</style>