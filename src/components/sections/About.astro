---
import abouts from "../../data/abouts.json";

interface Props {
  title: string;
}

const site = Astro.site;
const { title } = Astro.props;
---

<div
  id="about"
  class="w-full min-h-screen flex flex-col justify-center items-center bg-gray-100 py-12"
>
  <div class="self-center text-center w-full sm:w-2/3 xl:w-1/2 px-4 sm:px-0">
    <h2 class="tracking-wide text-green-600 font-bold text-4xl mb-16">
      Servicios de procesamiento
    </h2>
  </div>

  <div
    class="px-16 md:grid md:grid-cols-4 md:gap-8 lg:gap-12 xl:gap-16 dark:bg-gray-900"
  >
    {
      abouts.map((about) => (
        <div class="bg-white rounded-lg shadow-md">
          <div class="p-5 z-20">
            <h3 class="font-bold text-lg">{about.title}</h3>
            <p class="text-gray-700">
              Toma selfies. Haz películas. Crea sin límites.
            </p>
          </div>
          <img
            src={`${about.image}`}
            class="w-full h-96 -z-0 object-cover rounded-lg sticky"
          />
        </div>
      ))
    }
  </div>
</div>
